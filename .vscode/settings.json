{
    // gopls with gofumpt and import ordering
    "go.useLanguageServer": true,
    "gopls": {
        "formatting.gofumpt": true,
    },
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },

    // golangci-lint
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ]
}
